<div class="row">
            <div class="col-md-12">
                
                <form name="sentMessage" id="headportModifyForm"  method="post" novalidate>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>供热点编号:</label>
                            <span type="text" class="form-control" name="portno" ></span>
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>:供热点名称</label>
                            <span type="text" class="form-control" name="portname" id="phone" required data-validation-required-message="Please enter your phone number.">
                        </div>
                    </div>
                     <div class="control-group form-group">
                        <div class="controls">
                            <label>范围:</label>
                            <span type="text" class="form-control" name="scope" id="phone" required data-validation-required-message="Please enter your phone number.">
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>地址:</label>
                            <span class="form-control" name="portaddr"/>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>联系电话:</label>
                            <span class="form-control" name="porttel"/>
                        </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                   
                </form>
            </div>

        </div>