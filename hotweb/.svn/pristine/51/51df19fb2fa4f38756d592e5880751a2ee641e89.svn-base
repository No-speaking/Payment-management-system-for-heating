
<div class="row">
            <div class="col-md-12">
                
                <form name="sentMessage" id="buildModifyForm" action="../Build/modify.mvc" method="post" novalidate>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>楼号:</label>
                            <input type="text" class="form-control" name="bno" id="name" required data-validation-required-message="Please enter your name.">
                            <p class="help-block"></p>
                        </div>
                    </div>
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>备注:</label>
                            <input type="text" class="form-control" name="bcontent" id="phone" required data-validation-required-message="Please enter your phone number.">
                        </div>
                    </div>
                   
                    <div class="control-group form-group">
                        <div class="controls">
                            <label>小区名称:</label>
                            <select class="form-control" name="district.dno"/>
                        </div>
                    </div>
                    <div id="success"></div>
                    <!-- For success/fail messages -->
                    <button type="submit" class="btn btn-primary">提交</button>
                </form>
            </div>

        </div>